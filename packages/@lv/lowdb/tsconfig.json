{
  "extends": "@tsconfig/node12/tsconfig.json",
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": ["DOM"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  }
}
