{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@@data/*": ["src/controller2/*"],
    }
  },
  "include": [
    "install.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [".eslintrc.js","node_modules",
    "../../archive/old/**/*.ts"
  ]
}
